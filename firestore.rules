
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access to rooms and establishment data
    match /rooms/{roomId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
    
    match /establishment/{imageId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // Bookings rules
    match /bookings/{bookingId} {
      // Allow users to create their own bookings
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow users to read their own bookings, and admins to read all bookings
      allow read: if (request.auth != null && resource.data.userId == request.auth.uid) || (request.auth.token.admin == true);
      
      // Allow only admins to update or delete bookings
      allow update, delete: if request.auth.token.admin == true;
    }
  }
}
